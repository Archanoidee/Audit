
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  isAdmin    Boolean   @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Staff {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  gmail             String    @unique
  password          String
  contactNumber     String
  firstName         String
  lastName          String
  employeeId        String    @unique
  dateOfBirth       DateTime
  gender            String
  maritalStatus     String
  nationality       String
  region            String
  address           String
  role              String
  designation       String
  employmentType    String
  qualifications    String
  startDate         DateTime
  endDate           DateTime?
  yearsOfExperience Int
  dateOfJoining     DateTime
  totalLeaveDays    Int
  basicPay          Float
  travelAllowance   Float
  dailyAllowance    Float
  otherAllowance    Float
  hourlyAllowance   Float
  weeklyAllowance   Float
  pf                String
  esi               String
  tax               String
  companyName       String
  companyAddress    String
  skills            String[]
  languages         String[]
  relation          String
  documentType      String
  documentNumber    String
  documentUrl       String
  expiryDate        DateTime
}
